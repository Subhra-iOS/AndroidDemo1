<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingVertical="50dp">
    <TextView
            android:layout_width="207dp"
            android:layout_height="wrap_content" android:id="@+id/titleLabel"
            android:lines="1" android:gravity="center|center_horizontal"
            android:text="Demo App"
            android:layout_gravity="center|center_horizontal" android:textSize="30sp" android:paddingStart="10dp"
            android:paddingTop="10dp" android:paddingEnd="10dp" android:paddingBottom="10dp" android:padding="10dp"/>
    <Button
            android:text="Tap Now"
            android:layout_width="198dp"
            android:layout_height="wrap_content" android:id="@+id/launchButton"
            android:layout_gravity="center|center_horizontal"
            android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" android:gravity="center|center_horizontal"
            android:padding="10dp" android:layout_marginVertical="200dp"/>
</LinearLayout>