<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >
    <TextView
            android:text="@string/lableTxtView"
            android:layout_width="0dp"
            android:layout_marginTop="100dp"
            android:layout_margin="20dp"
            android:layout_height="30dp" android:id="@+id/textView" android:layout_weight="10"
            tools:text="Demo App" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center" android:visibility="visible"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="100dp"
            android:layout_marginHorizontal="100dp"
            android:text="@string/TapMeBtn" style="@android:style/Widget.Button"
            android:id="@+id/tapOnMe"/>
</LinearLayout>